              <% end %>
            </div>
          </div>
          <div class="widget-body">
            <table id="dt_basic" width="100%" class="display table table-striped table-bordered table-hover" style="margin:0 padding-top:0px">
              <thead>
              <tr>
                <th class='all control'><%= sort_link(@q, :fecha_hora, t('simple_form.labels.defaults.fecha_hora')) %></th>
                <th class='all control'><%= sort_link(@q, :status, t('simple_form.labels.defaults.status')) %></th>
                <th><%= sort_link(@q, :maxi_amount, t('simple_form.labels.defaults.maxi_amount')) %></th>
                <th><%= sort_link(@q, :javi_amount, t('simple_form.labels.defaults.javi_amount')) %></th>
                <th><%= sort_link(@q, :marcos_amount, t('simple_form.labels.defaults.marcos_amount')) %></th>
                <th><%= sort_link(@q, :mati_amount, t('simple_form.labels.defaults.mati_amount')) %></th>
                <th><%= sort_link(@q, :lapile_caja, t('simple_form.labels.defaults.lapile_caja')) %></th>
                <th class="all"><%= t('simple_form.screen.actions') %></th>
              </tr>
              </thead>
              <tbody>
              <% @cash_closings.each do |cash_closing| %>
                  <tr>
                    <td><%= l(cash_closing.fecha_hora, format: :without_seg) %></td>
                    <td><%= cash_closing.i18n_status %></td>
                    <td align='right'><%= number_to_currency(cash_closing.maxi_amount) %></td>
                    <td align='right'><%= number_to_currency(cash_closing.javi_amount) %></td>
                    <td align='right'><%= number_to_currency(cash_closing.marcos_amount) %></td>
                    <td align='right'><%= number_to_currency(cash_closing.mati_amount) %></td>
                    <td align='right'><%= number_to_currency(cash_closing.lapile_caja) %></td>
                    <td class="table-actions">
                      <%= render 'shared/action_icons', locals: {target: cash_closing} %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="widget-footer">
            <%= render 'shared/pagination', locals: {target: @cash_closings, model_index_path: cash_closings_path} %>
          </div>
