                        </div>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[status_cont]"><%= t('simple_form.labels.defaults.status') %></label>
                        <%= f.search_field :status_cont, label: false, class: "form-control input-sm" %>
