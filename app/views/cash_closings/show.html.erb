        </header>
        <!-- widget div-->
        <div class="no-padding">

          <!-- widget content -->
          <div class="widget-body">

            <div class="form-group">
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.fecha_hora') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= l(@cash_closing.fecha_hora, :format => :long) if @cash_closing.fecha_hora %>
