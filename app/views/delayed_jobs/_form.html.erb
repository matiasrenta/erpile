<div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
  <header>
    <h2><%= creating? ? "<i class='fa fa-file'></i>".html_safe : "<i class='fa fa-pencil'></i>".html_safe %></h2>
  </header>
  <div>
    <div class="widget-body">
      <%= simple_form_for @delayed_job, html: { class: 'form-horizontal' },
                          wrapper: :horizontal_form,
                          wrapper_mappings: {
                                  check_boxes: :horizontal_radio_and_checkboxes,
                                  radio_buttons: :horizontal_radio_and_checkboxes,
                                  file: :horizontal_file_input,
                                  boolean: :horizontal_boolean
                          } do |f| %>
          <div class="form-inputs edit">
                                                            <%= f.input :priority %>
                                                                                                <%= f.input :attempts %>
                                                                        <%= f.input :handler, :input_html => { :rows => 4, :cols => 30 } %>
                                                    <%= f.input :last_error, :input_html => { :rows => 4, :cols => 30 } %>
                                                    <%= f.input :run_at, as: :string, placeholder: 'dd/mm/aaaa HH:MM', input_html: {class: 'datetimepicker', value: format_datetime_field(@delayed_job.run_at)} %>
                                                    <%= f.input :locked_at, as: :string, placeholder: 'dd/mm/aaaa HH:MM', input_html: {class: 'datetimepicker', value: format_datetime_field(@delayed_job.locked_at)} %>
                                                    <%= f.input :failed_at, as: :string, placeholder: 'dd/mm/aaaa HH:MM', input_html: {class: 'datetimepicker', value: format_datetime_field(@delayed_job.failed_at)} %>
                                                    <%= f.input :locked_by %>
                                                    <%= f.input :queue %>
                
            <div class="widget-footer">
              <div class="form-actions">
                <div class="btn-group">
                  <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), delayed_jobs_path, class: 'btn btn-default btn-sm' if can?(:read, DelayedJob) %>
                  <%= link_to raw("<i class='fa fa-binoculars'></i> #{t('simple_form.buttons.show')}"), @delayed_job, class: 'btn btn-default btn-sm' if can?(:read, DelayedJob) && updating? %>
                  <%= link_to raw("<i class='fa fa-trash'></i> #{t('simple_form.buttons.destroy')}"), @delayed_job, class: 'btn btn-default btn-sm', method: :delete, data: {confirm: t('helpers.messages.are_you_sure'), 'original-title': 'Destroy'} if can?(:destroy, DelayedJob) && updating? %>
                  <button type="submit" class="btn btn-primary btn-sm"><i class='fa fa-check-circle'></i> <%= creating? ? t('simple_form.buttons.create') : t('simple_form.buttons.update') %></button>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
