<section id="widget-grid">
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>
        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), delayed_jobs_path, class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_delayed_job_path(@delayed_job), class: 'btn btn-primary' if can?(:update, DelayedJob) %>
        </div>
      </header>
      <div>
        <!-- widget content -->
        <div class="widget-body">

        <table class="table table-striped table-hover grey-blue-table" width="100%" cellspacing="0" id="dt_basic">
            <thead><tr class="hidden"><th></th><th></th></tr></thead> <!-- el thead es necesario para que datatable no de error --> <tbody>
                                        <tr role="row">
              <th><%= t('simple_form.labels.priority') %></th>
              <td>
                                                            <%= @delayed_job.priority %>
                                                  </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.attempts') %></th>
              <td>
                                                            <%= @delayed_job.attempts %>
                                                  </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.handler') %></th>
              <td>
                                    <%= @delayed_job.handler %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.last_error') %></th>
              <td>
                                    <%= @delayed_job.last_error %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.run_at') %></th>
              <td>
                                    <%= l(@delayed_job.run_at, :format => :long) if @delayed_job.run_at %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.locked_at') %></th>
              <td>
                                    <%= l(@delayed_job.locked_at, :format => :long) if @delayed_job.locked_at %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.failed_at') %></th>
              <td>
                                    <%= l(@delayed_job.failed_at, :format => :long) if @delayed_job.failed_at %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.locked_by') %></th>
              <td>
                                    <%= @delayed_job.locked_by %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.queue') %></th>
              <td>
                                    <%= @delayed_job.queue %>
                              </td>
            </tr>
                        </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>

