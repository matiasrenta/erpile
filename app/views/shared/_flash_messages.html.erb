<article class="col-sm-12">
  <% if alert %>
      <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
          ×
        </button>
        <i class="fa-fw fa fa-ban fa-2x"></i>
        <strong><%= alert %></strong>
      </div>
  <% end %>

  <% if flash[:warning] %>
      <div class="alert alert-warning fade in">
        <button class="close" data-dismiss="alert">
          ×
        </button>
        <i class="fa-fw fa fa-warning fa-2x"></i>
        <strong><%= flash[:warning] %></strong>
      </div>
  <% end %>

  <% if flash[:info] %>
      <div class="alert alert-info fade in">
        <button class="close" data-dismiss="alert">
          ×
        </button>
        <i class="fa-fw fa fa-info-circle fa-2x"></i>
        <strong><%= flash[:info] %></strong>
      </div>
  <% end %>

  <% if notice && notice != 'Has iniciado sesión correctamente.' %>
      <div class="alert alert-success fade in">
        <button class="close" data-dismiss="alert">
          ×
        </button>
        <i class="fa-fw fa fa-check fa-2x"></i>
        <strong><%= notice %></strong>
      </div>
  <% end %>

</article>