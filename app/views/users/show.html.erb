<section id="widget-grid">
  <article class="col-sm-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), users_path, class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_user_path(@user), class: 'btn btn-primary' if can?(:update, User) %>
        </div>
      </header>
      <div class="no-padding">
        <div class="widget-body">

          <div class="form-group">

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.email') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @user.email %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.name') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @user.name %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.role') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @user.role.try(:name) %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label"><strong>Caja</strong></label>
              <div class="col-lg-9 details-data">
                <% caja = @user.caja %>
                <% if caja < 0 %>
                    <span style="color: red;"><%= number_to_currency(caja) %></span>
                <% else %>
                    <span style="color: blue;"><%= number_to_currency(caja) %></span>
                <% end %>
              </div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.time_zone') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @user.time_zone %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.avatar') %></strong>
              </label>
              <div class="col-lg-9 details-data">
                <%= image_tag attachment_url(@user, :avatar, :fill, 100, 100, fallback: "avatars/male.png") %>
              </div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.created_at') %></strong>
              </label>
              <div class="col-lg-9 details-data">
                <%= l(@user.created_at, :format => :long) if @user.created_at %>
              </div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.updated_at') %></strong>
              </label>
              <div class="col-lg-9 details-data">
                <%= l(@user.updated_at, :format => :long) if @user.updated_at %>
              </div>
            </div>

            <% if current_user.superuser? %>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('sign_in_count') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @user.sign_in_count %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('failed_attempts') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @user.failed_attempts %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('current_sign_in_ip') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @user.current_sign_in_ip %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('last_sign_in_ip') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @user.last_sign_in_ip %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('reset_password_sent_at') %></strong>
                </label>
                <div class="col-lg-9 details-data">
                  <%= l(@user.reset_password_sent_at, :format => :with_seg) if @user.reset_password_sent_at %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('remember_created_at') %></strong>
                </label>
                <div class="col-lg-9 details-data">
                  <%= l(@user.remember_created_at, :format => :with_seg) if @user.remember_created_at %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('current_sign_in_at') %></strong>
                </label>
                <div class="col-lg-9 details-data">
                  <%= l(@user.current_sign_in_at, :format => :with_seg) if @user.current_sign_in_at %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('last_sign_in_at') %></strong>
                </label>
                <div class="col-lg-9 details-data">
                  <%= l(@user.last_sign_in_at, :format => :with_seg) if @user.last_sign_in_at %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('locked_at') %></strong>
                </label>
                <div class="col-lg-9 details-data">
                  <%= l(@user.locked_at, :format => :with_seg) if @user.locked_at %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('last_seen_at') %></strong>
                </label>
                <div class="col-lg-9 details-data">
                  <%= l(@user.last_seen_at, :format => :with_seg) if @user.last_seen_at %>
                </div>
              </div>

            <% end %>

          </div>

        </div>
      </div>
    </div>
  </article>
</section>

<script type="text/javascript">
  $('.show-details:even').addClass('striped-div');
</script>