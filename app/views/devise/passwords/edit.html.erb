<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { id: 'login-form', class: 'smart-form client-form', method: :put }) do |f| %>
    <header>
      <%= t('pages.login.change_your_password') %>
    </header>

    <fieldset>
      <%= f.input :reset_password_token, as: :hidden %>
      <section>
        <label class="label"><%= t('pages.login.new_password') %></label>
        <label class="input"> <i class="icon-append fa fa-lock"></i>
          <%= f.input :password, label: false, required: true, autofocus: true, hint: ("#{@minimum_password_length} #{t('pages.login.characters_minimum')}" if @minimum_password_length) %>
        </label>
      </section>

      <section>
        <label class="label"><%= t('pages.login.confirm_your_new_password') %></label>
        <label class="input"> <i class="icon-append fa fa-lock"></i>
          <%= f.input :password_confirmation, label: false, required: true %>
        </label>
        <div class="note">
          <%= render "devise/shared/links" %>
        </div>
      </section>
    </fieldset>
    <footer>
      <%= f.button :submit, t('pages.login.change_password'), class: 'btn btn-primary' %>
    </footer>
<% end %>

